@model List<Libro>

<table class="table">
    <thead>
        <tr>

            <th>
                Titulo
            </th>
            <th>
                Portada
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    <a asp-controller="Libros"
                       asp-action="Details"
                       asp-route-libroId="@item.LibroId" />
                    @item.Titulo
                </td>
                <td>
                    <img src="@item.Portada" style="height: 100px; width = auto" />
                </td>
            </tr>
        }
    </tbody>
</table>
