@model List<Libro>

@if(Model != null)
{
    <table class="table">
        <thead>
            <tr>

                <th>
                    Titulo
                </th>
                <th>
                    Portada
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        <a asp-controller="Libros"
                           asp-action="Details"
                           asp-route-libroId="@item.LibroId" />
                        @item.Titulo
                    </td>
                    <td>
                        <img src="@item.Portada" style="height: 100px; width = auto" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Libros"
       asp-action="Comprar"
       class="btn btn-info">
        Finalizar compra
    </a>
} else
{
   <p>No tienes ningun libro añadido</p>
}
